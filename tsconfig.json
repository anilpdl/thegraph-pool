    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "importHelpers": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "*"
      ],
    }
  },
  "include": [
    "src"
  ],
}